doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css", integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e", crossorigin="anonymous")
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL', crossorigin='anonymous')

  body
    nav.navbar.navbar-expand-lg.bg-primary(data-bs-theme='dark')
      .container-fluid
        a.navbar-brand(href='/') #{title}
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarColor01.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link.active(href='/')
                | Home
                span.visually-hidden (current)
            li.nav-item
              a.nav-link.active(href='/api/loginpage')
                | Login
          form.d-flex
            input.form-control.me-sm-2(type='search', placeholder='Search')
            button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search
    block content



